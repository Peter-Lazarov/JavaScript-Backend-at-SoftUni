<main class="details">
    <!-- Details page -->
    <section id="details">
        <div id="details-wrapper">
            <p id="details-title">Name: {{this.name}}</p>
            <div id="img-wrapper">
                <img src="{{this.image}}" />
            </div>
            <div id="info-wrapper">
                <table>
                    <tr>
                        <td>
                            <p>
                                Category: <span id="details-category">{{this.category}}</span>
                            </p>
                        </td>
                        <td>
                            <p>Color: <span id="details-color">{{this.color}}</span></p>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <p>Location: <span id="details-location">{{this.location}}</span></p>
                        </td>
                        <td>
                            <p>Formula: <span id="details-formula">{{this.formula}}</span></p>
                        </td>
                    </tr>
                </table>
                <p>Description: <span id="details-description">{{this.description}}</span></p>
            </div>

            {{#if isAuthenticated}}
                <!--Edit and Delete are only for creator-->
                <div id="action-buttons">
                    {{#if isOwner}}
                        <a href="/stones/{{this._id}}/edit" id="edit-btn">Edit</a>
                        <a href="/stones/{{this._id}}/delete" id="delete-btn">Delete</a>
                    {{else if isLiked}}
                        <p id="already-liked">You already liked this stone!</p>
                    {{else}}
                        <a href="/stones/{{this._id}}/like" id="like-btn">Like</a>
                    {{/if}}
                </div>
            {{/if}}
        </div>
    </section>
</main>
