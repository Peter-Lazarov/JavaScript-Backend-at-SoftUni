<div class="container">
    <div class="course-message">
        <h1 id="site-title">Course Book</h1>
        <h2 id="site-mid-title">Show your opportunities!</h2>
    </div>
    {{#if coursesTheLastThree}}
        <div class="last-course">
            {{#each coursesTheLastThree}}
                    <div class="info">
                        <h2 class="title">{{this.title}}</h2>
                        <h4 class="genre">Type: {{this.type}}</h4>
                        <h4 class="certificate">Certificate: {{this.certificate}}</h4>
                        <h4 class="price">Price: {{this.price}}</h4>
                        <div class="learn-more">
                            <a href="/courses/{{_id}}/details">Learn More...</a>
                        </div>
                    </div>
            {{/each}}
        </div>
    {{else}}
    <!-- If there are still no course posts on the database -->
    <article class="not-available-course">
        <h1>No course created yet.</h1>
    </article>
    {{/if}}
</div>
